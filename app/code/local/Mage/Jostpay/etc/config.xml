<?xml version="1.0"?>

<config>
    <modules>
        <Mage_Jostpay>
            <version>1.0.0</version>
        </Mage_Jostpay>
    </modules>
    <global>
        <models>
            <jostpay>
                <class>Mage_Jostpay_Model</class>
                <resourceModel>jostpay_mysql4</resourceModel>
            </jostpay>
            <jostpay_mysql4>
                <class>Mage_Jostpay_Model_Mysql4</class>
                <entities>
                    <api_debug><table>jostpay_api_debug</table></api_debug>
                </entities>
            </jostpay_mysql4>
        </models>
		<helpers>
            <jostpay>
                <class>Mage_Jostpay_Helper</class>
            </jostpay>
        </helpers>
        <resources>
            <jostpay_setup>
                <setup>
                    <module>Mage_Jostpay</module>
					<class>Mage_Jostpay_Model_Mysql4_Setup</class>
                </setup>
                <connection>
                    <use>core_setup</use>
                </connection>
            </jostpay_setup>
            <jostpay_write>
                <connection>
                    <use>core_write</use>
                </connection>
            </jostpay_write>
            <jostpay_read>
                <connection>
                    <use>core_read</use>
                </connection>
            </jostpay_read>
        </resources>
        <blocks>
            <jostpay><class>Mage_Jostpay_Block</class></jostpay>
        </blocks>
    </global>
    <frontend>
        <secure_url>
            <jostpay_standard>/jostpay/standard</jostpay_standard>
        </secure_url>
        <routers>
            <jostpay>
                <use>standard</use>
                <args>
                    <module>Mage_Jostpay</module>
                    <frontName>jostpay</frontName>
                </args>
            </jostpay>
        </routers>
        <translate>
            <modules>
                <Mage_JostpayForm>
                    <files>
                        <default>Mage_Jostpay.csv</default>
                    </files>
                </Mage_JostpayForm>
            </modules>
        </translate>
        <layout>
            <updates>
                <jostpay>
                    <file>jostpay.xml</file>
                </jostpay>
            </updates>
        </layout>
    </frontend>
    <adminhtml>
        <translate>
            <modules>
                <Mage_Jostpay>
                    <files>
                        <default>Mage_Jostpay.csv</default>
                    </files>
                </Mage_Jostpay>
            </modules>
        </translate>
    </adminhtml>
    <default>
        <payment>
            <jostpay_standard>
				<order_status>pending</order_status>
				<active>1</active>
                <payment_action>Payment</payment_action>
                <model>jostpay/standard</model>
                <title>Jostpay</title>
                <allowspecific>0</allowspecific>
            </jostpay_standard>
        </payment>
    </default>
</config>